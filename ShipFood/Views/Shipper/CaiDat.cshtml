
@{
    ViewBag.Title = "CaiDat";
    Layout = "~/Views/Shared/_LayoutPageShipper.cshtml";
}
@model ShipFood.Models.tbUser
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Cài đặt</h4>
                </div>
            </div>

        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="profile card card-body px-3 pt-3 pb-0">
                    <div class="profile-head">
                        <div class="photo-content">
                            <div class="cover-photo"></div>
                        </div>
                        <div class="profile-info">
                            <div class="profile-photo">
                                <img src="~/Source/Shipper/images/profile/jolibe.jpg" class="img-fluid rounded-circle" alt="" />
                            </div>
                            <div class="profile-details">
                                <div class="profile-name px-3 pt-2">
                                    <h4 class="text-primary mb-0">@Model.tbShipper.tenshipper</h4>
                                    <p>Shiper</p>
                                </div>
                                <div class="profile-email px-2 pt-2">
                                    <h4 class="text-muted mb-0">@Model.sdt</h4>
                                    <p>SĐT</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h3 class="m-b-0">@Model.tbShipper.diemdanhgia</h3>
                <span>Điểm đánh giá</span>
            </div>
            <div class="col">
                <h3 class="m-b-0">@Model.tbShipper.soluotdanhgia</h3>
                <span>Số lượt đánh giá</span>
            </div>
            <div class="col">
                <h3 class="m-b-0">@Model.sdt</h3>
                <span>Số điện thoại</span>
            </div>
            <div class="col">
                <h3 class="m-b-0">345</h3>
                <span>Tổng đơn đã Giao </span>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="profile-tab">
                    <div class="custom-tab-1">
                        <ul class="nav nav-tabs">

                            <li class="nav-item">
                                <a href="#profile-settings" data-toggle="tab" class="nav-link">Cài đặt</a>
                            </li>
                        </ul>
                        <div class="tab-content">

                            <div id="profile-settings" class="tab-pane fade">
                                <div class="pt-3">
                                    <div class="settings-form">
                                        <h4 class="text-primary">Cài đặt tài khoản</h4>
                                        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-horizontal">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.userid)

                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label>Số điện thoại</label>
                                                        @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label>Mật khẩu</label>
                                                        @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Địa chỉ</label>
                                                    <input class="form-control" value="@Model.tbShipper.diachi" name="diachi" />
                                                    @Html.ValidationMessageFor(model => model.tbShipper.diachi, "", new { @class = "text-danger" })
                                                </div>
                                             
                                                

                                                <button class="btn btn-primary" type="submit">Cập nhật</button>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

